<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length<=0) { %>
            <h1>Nothing there!</h1>
            <% }else{ %>
                <% orders.forEach(order =>{ %>
                    <ul class="cart__item-list">
                        <h2>Order # <%= order._id %> - <a href= "/orders/<%= order._id%>">Invoice</a></h2> 
                        <% order.items.forEach(productData =>{ %>
                            <li class="cart__item">
                                <% /* %>
                                <!-- <h3><%= productData.title %> </h3> -->
                                <!-- <h3><%= productData.productId.title %> </h3> -->
                                <% */ %>
                                <h3><%= productData.product.title %> </h3>
                                <h3>Qty: <%= productData.quantity %> </h3>
                            </li>
                        <%  }) %>                       
                    </ul>
                <%  }) %>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>